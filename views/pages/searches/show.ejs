<!DOCTYPE html>
<html lang="en">
  <%- include('../../layout/head') %>
<body>
  <%- include('../../layout/header') %>
  <main>
    <% for(let book of books) {%> 
      <section>
        <img src="<%=book.img_url%>" alt="#">
        <article>
          <h2><%=book.title %></p>
          <h3><%=book.author %> </p>
          <p><%=book.summary %> </p>    
        </article>
        <form action="/books" method="POST">
          <button class="addToCollection" type="submit" name="addTo" value="<%=book.index %> ">Add to My Collection</button>
        </form>
      </section>
    <% } %>   
  </main>
  <%- include('../../layout/footer') %>
</body>
</html>